<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.turtlesamigo.lungabnormdetector.SampleOverviewController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="20">
            <Label text="Train directory:"/>
            <TextField fx:id="_tfTrainRecordsDir" prefWidth="400.0" editable="false"/>
            <Button text="Browse" onAction="#onBrowseTrainRecordsDir"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <TableView fx:id="recordsTable">
                <columns>
                    <TableColumn text="Image id"/>
                    <TableColumn text="Image size"/>
                    <TableColumn text="Founding"/>
                    <TableColumn text="Radiologist"/>
                </columns>
            </TableView>
            <ImageView fx:id="_ivSelectedImage"/>
        </HBox>
    </VBox>
</AnchorPane>
