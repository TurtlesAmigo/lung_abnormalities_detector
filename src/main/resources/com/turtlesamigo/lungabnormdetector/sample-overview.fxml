<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turtlesamigo.lungabnormdetector.SampleOverviewController">

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="20">
            <Label text="Train directory:" />
            <TextField fx:id="_tfTrainRecordsDir" editable="false" prefWidth="400.0" />
            <Button onAction="#onBrowseTrainRecordsDir" text="Browse" />
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <TreeView fx:id="_recordsTree" onMouseClicked="#selectItem">
            <HBox.margin>
               <Insets bottom="20.0" left="20.0" />
            </HBox.margin></TreeView>
            <ImageView fx:id="_ivSelectedImage" fitHeight="640.0" fitWidth="860.0">
            <HBox.margin>
               <Insets bottom="20.0" />
            </HBox.margin></ImageView>
            <TableView fx:id="_ttvSelectedRecord" prefWidth="500.0" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn prefWidth="50.0" text="Show" />
                    <TableColumn editable="false" prefWidth="100.0" text="RadID" />
                    <TableColumn prefWidth="150.0" text="Founding type" />
                    <TableColumn editable="false" prefWidth="100.0" text="Min point" />
                    <TableColumn prefWidth="100.0" text="Max point" />
                </columns>
            <HBox.margin>
               <Insets bottom="20.0" right="20.0" />
            </HBox.margin>
            </TableView>
        </HBox>
    </VBox>
</AnchorPane>
