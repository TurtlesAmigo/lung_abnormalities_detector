<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<fx:root prefHeight="586.0" prefWidth="699.0" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../styles/records-loader-style.css">
    <HBox prefHeight="84.0" prefWidth="699.0" spacing="20" VBox.vgrow="NEVER">
        <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label prefHeight="25.0" prefWidth="97.0" text="Train directory:" HBox.hgrow="NEVER" />
        <TextField fx:id="_tfTrainRecordsDir" editable="false" prefHeight="25.0" HBox.hgrow="ALWAYS" />
        <Button fx:id="_btnBrowse" prefHeight="25.0" prefWidth="190.0" text="Browse" HBox.hgrow="NEVER" />
    </HBox>
    <HBox prefHeight="554.0" prefWidth="659.0" spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <AnchorPane HBox.hgrow="ALWAYS">
            <TableView fx:id="_tvAllowedRadiologists" VBox.vgrow="ALWAYS"
                       AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                       AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <columns>
                    <TableColumn fx:id="_tcRadiologistShow" prefWidth="144.0" text="Show"/>
                    <TableColumn fx:id="_tcRadiologistName" editable="false" prefWidth="144.0" text="Radiologist"/>
                </columns>
            </TableView>
        </AnchorPane>
        <AnchorPane HBox.hgrow="ALWAYS">
            <TableView fx:id="_tvAllowedFindingClasses" VBox.vgrow="ALWAYS"
                       AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                       AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <columns>
                    <TableColumn fx:id="_tcFindingShow" prefWidth="136.0" text="Show"/>
                    <TableColumn fx:id="_tcFindingName" editable="false" prefWidth="135.0" text="Finding Class"/>
                </columns>
            </TableView>
        </AnchorPane>
    </HBox>
</fx:root>
