<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import com.turtlesamigo.controllers.RecordSelector?>

<AnchorPane minHeight="1024" minWidth="2048" prefHeight="1024" prefWidth="2048" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.turtlesamigo.controllers.SampleOverviewController">
   <BorderPane fx:id="_borderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <top>
          <RecordSelector fx:id="_recordSelector" prefHeight="69.0" prefWidth="2048.0" BorderPane.alignment="CENTER"/>
      </top>
      <left>
           <HBox alignment="BOTTOM_CENTER" spacing="20" BorderPane.alignment="CENTER">
               <TreeView fx:id="_recordsTree" onMouseClicked="#selectItem">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="10.0" />
               </HBox.margin>
            </TreeView>
           </HBox>
      </left>
      <right>
            <TableView fx:id="_tvSelectedRecordData" prefWidth="500.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="_clmnShow" prefWidth="50.0" text="Show" />
                    <TableColumn fx:id="_clmnRadId" editable="false" prefWidth="100.0" text="RadID" />
                    <TableColumn fx:id="_clmnFoundingType" editable="false" prefWidth="150.0" text="Founding type" />
                    <TableColumn fx:id="_clmnBBoxSize" editable="false" prefWidth="100.0" text="Size" />
                </columns>
            <BorderPane.margin>
               <Insets bottom="20.0" left="10.0" right="20.0" />
            </BorderPane.margin>
            </TableView>
      </right>
      <center>
            <Pane fx:id="_imagePane" prefHeight="955.0" prefWidth="1224.0" BorderPane.alignment="CENTER">
                <ImageView fx:id="_ivSelectedImage" fitHeight="932.0" fitWidth="1219.0" />
                <Pane fx:id="_overlayBBPane" layoutY="-3.0" prefHeight="935.0" prefWidth="1217.0" />
            <BorderPane.margin>
               <Insets bottom="20.0" left="10.0" right="10.0" />
            </BorderPane.margin>
            </Pane>
      </center>
   </BorderPane>
</AnchorPane>
